@model Models.ViewModels.CatRecVM

@{
    ViewBag.Title = "showAllCats";
}

<h2>showAllCats</h2>

<p>
    @Html.ActionLink("Create New", "showNewCat")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.catList[0].name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catList[0].age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catList[0].pic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catList[0].gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catList[0].mainColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catList[0].secondColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catList[0].thirdColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.catList[0].arrivalDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.catList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
  
        <td>
            @Html.DisplayFor(modelItem => item.age)
        </td>
        <td>            
          <img src="~/Images/Cats/@item.pic" alt="Cat" style="height:50px;">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mainColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.secondColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.thirdColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.arrivalDate)
        </td>
        <td>
          @Html.ActionLink("Edit", "editCat", new { id = item.Id }) |
          @Html.ActionLink("EditCatDetails", "editCatDetails", new { id = item.Id }) |
          @Html.ActionLink("Details", "showCatDetails", new { id = item.Id }) |
          @Html.ActionLink("Delete", "deleteCat", new { id = item.Id },
                 new { onclick = "return confirm('Are you sure?');" })
          @*@Html.ActionLink("Delete", "deleteCat", new { onclick = "saveCat();" })*@
          @*@Html.ActionLink("Delete", "deleteCat", new { id = item.Id })*@
        </td>
    </tr>
}

</table>


